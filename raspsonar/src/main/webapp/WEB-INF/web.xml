<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>raspsonar Web Application</display-name>
  <filter>
  	<filter-name>MainFilter</filter-name>
  	<filter-class>it.cecchi.raspsonar.http.MainFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>MainFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
  	<servlet-name>StartupServlet</servlet-name>
  	<servlet-class>it.cecchi.raspsonar.http.StartupServlet</servlet-class>
  	<load-on-startup>1</load-on-startup>  	
  </servlet>
</web-app>
